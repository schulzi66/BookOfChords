service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{id} {      
      allow read, create
      allow update: if isSignedIn() && isOwner(id)
    }
    match /gigs/{id} {
    	allow read, write: if isSignedIn()
    }
    match /songs/{id} {
    	allow read, write: if isSignedIn()	
    }
    match /configurations/{id} {
      allow read, write: if isSignedIn()
    }
     match /files/{id} {
    	allow read, write: if isSignedIn()
    }
    match /bands/{id} {
        allow read, write: if isSignedIn()
    }
    
    
    /// Functions ///
    function isSignedIn() {
    	return request.auth != null;
    }
    
    function isOwner(id) {
    	return request.auth.uid == resource.data.uid
    }
    
    function existingData() {
    	return resource.data
    }
    
    function incomingData() {
    	return request.resource.data
    }
    
    function getSongData(id) {
    	return get(/databases/$(database)/documents/songs/$(id)).data
    }
    
    function getGigData(id) {
    	return get(/databases/$(database)/documents/gigs/$(id)).data
    }
    
    function getUserData(id) {
    	return get(/databases/$(database)/documents/users/$(id)).data
    }
  }
}